<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <com.dlsd.property.view.CustomTitleBar
            android:id="@+id/titlebar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:left_icon="@drawable/btn_back"
            app:right_icon="@drawable/btn_more_gray"
            app:titlebar_type="12" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="58dp"
            android:text="重置密码"
            android:textColor="@color/txt_color_3"
            android:textSize="25dp" />

        <LinearLayout
            android:id="@+id/lly_change_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:text="验证成功，重置密码。"
                android:textColor="@color/txt_color_6"
                android:textSize="12dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="28dp"
            android:background="@drawable/border_gray_login"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.dlsd.property.view.ClearEditText
                android:id="@+id/et_pwd"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="@null"
                android:drawableEnd="@drawable/clear_edit"
                android:hint="密码"
                android:inputType="textPassword"
                android:maxLength="11"
                android:paddingLeft="20dp"
                android:paddingRight="15dp"
                android:textColor="@color/txt_color_3"
                android:textColorHint="@color/txt_color_9"
                android:textSize="15dp" />

            <ImageView
                android:id="@+id/iv_pwd"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="20dp"
                android:src="@drawable/icon_eye_close" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="28dp"
            android:background="@drawable/border_gray_login"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.dlsd.property.view.ClearEditText
                android:id="@+id/et_confirm_pwd"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="@null"
                android:drawableEnd="@drawable/clear_edit"
                android:hint="确认密码"
                android:inputType="textPassword"
                android:maxLength="11"
                android:paddingLeft="20dp"
                android:paddingRight="15dp"
                android:textColor="@color/txt_color_3"
                android:textColorHint="@color/txt_color_9"
                android:textSize="15dp" />

            <ImageView
                android:id="@+id/iv_confirm_pwd"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="20dp"
                android:src="@drawable/icon_eye_close" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="35dp"
            android:layout_marginRight="28dp"
            android:background="@drawable/bg_theme"
            android:text="确 认"
            android:textColor="@color/white"
            android:textSize="18dp" />


    </LinearLayout>
</layout>