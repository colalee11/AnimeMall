<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_color" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_check"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/new_off_choice" />

            <ImageView
                android:id="@+id/iv_doc_head"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:src="@mipmap/tishi" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingRight="10dp">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商品名称"
                    android:textColor="@color/txt_color_3"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/tv_sub_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="商品描述"
                    android:maxLines="3"
                    android:ellipsize="end"
                    android:textColor="@color/txt_color_6"
                    android:textSize="13dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="25dp"
                        android:gravity="center_vertical"
                        android:layout_marginTop="5dp"
                        android:text="¥ 0"
                        android:textColor="@color/txt_orange"
                        android:textSize="16dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_bus_count"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_sub"
                            android:layout_width="30dp"
                            android:layout_height="25dp"
                            android:text="—"
                            android:gravity="center"
                            android:textColor="@color/txt_color_3" />

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:background="@color/txt_color_6" />

                        <TextView
                            android:id="@+id/tv_count"
                            android:layout_width="40dp"
                            android:layout_height="25dp"
                            android:text="0"
                            android:gravity="center"
                            android:textColor="@color/txt_color_3" />

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:background="@color/txt_color_6" />

                        <TextView
                            android:id="@+id/tv_add"
                            android:layout_width="30dp"
                            android:layout_height="25dp"
                            android:text="+"
                            android:gravity="center"
                            android:textColor="@color/txt_color_3" />

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>
</layout>